<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SplashScreen">

    <LinearLayout
        android:id="@+id/firstlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/splashpu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_semibold"
            android:text="PU"
            android:textColor="#3D155F"
            android:textSize="45sp"
            tools:layout_editor_absoluteX="166dp"
            tools:layout_editor_absoluteY="348dp" />

        <ImageView
            android:id="@+id/splashimage"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/infinite_100"
            tools:layout_editor_absoluteX="371dp"
            tools:layout_editor_absoluteY="346dp" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/seclayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/firstlayout"
        android:layout_marginTop="15dp"
        android:gravity="center">


        <TextView
            android:id="@+id/splashpuuu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_medium"
            android:text="EVERY CONNECTION IS A NEW OPPORTUNITY"
            android:textColor="#E6109ED6"
            android:textSize="16sp"
            tools:layout_editor_absoluteX="166dp"
            tools:layout_editor_absoluteY="348dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/seclayout"
        android:layout_marginTop="260dp"
        android:gravity="center">


    <TextView
        android:id="@+id/splashpuu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat_semibold"
        android:text="Created with ❤️ in PU"
        android:textColor="#F39797"
        android:textSize="15sp"
        tools:layout_editor_absoluteX="166dp"
        tools:layout_editor_absoluteY="348dp" />
    </LinearLayout>

</RelativeLayout>